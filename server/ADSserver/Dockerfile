# syntax=docker/dockerfile:1
FROM python:3.8-buster
ENV PYTHONUNBUFFERED=1
WORKDIR /usr/src/app
RUN echo '====== INSTALANDO DEPENDENCIAS'
COPY ./requirements.txt /usr/src/app
RUN pip3 install -r requirements.txt
RUN echo '====== COPIANDO PROYECTO'
COPY . /usr/src/app
RUN echo '====== SETEANDO VARIABLES DE ENTORNO'
# ENV VT_API_KEY="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
# ENV DJANGO_SECRET="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
RUN echo '====== CORRIENDO SERVER'
EXPOSE 8000
RUN python3 manage.py migrate
CMD ["python3", "manage.py", "runserver", "0.0.0.0:8000"]